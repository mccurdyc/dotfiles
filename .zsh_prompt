#!/bin/bash

# prerequisites
autoload -Uz promptinit
promptinit
setopt prompt_subst

# lefthand
PROMPT="%F{20}"                  ## primary coloring
PROMPT+="%M "                     ## hostname for ssh
PROMPT+="%3~ "                    ## trailing pwd dirs
PROMPT+="%(1j.%jj .)"             ## jobs when present
## zsh-git-prompt
## .zsh/plugins/zsh-git-prompt
PROMPT+='$(git_super_status)'
PROMPT+="%(?.%F{green}➜ %F{white}.%F{red}➜ %F{white})" ## colored exit codes

# multiline
PROMPT2="%F{darkgrey}➜"
