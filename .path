#!/bin/sh
export PATH="/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin"

# go path
export GOPATH="${HOME}/go"

# go bin
export GOBIN="${HOME}/go/bin"

# add go path
export PATH="/usr/local/go/bin:${GOPATH}/bin:${PATH}"

# go source path
export GOEDGE_PATH="${OSS_DIR}/go"
export GOEDGE_BIN="${GOEDGE_PATH}/bin"

# cargo (rust) path
export PATH="${HOME}/.cargo/bin:${PATH}"

# add w3m w3mimgdisplay to path for displaying images in vifm / terminal.
export PATH="/usr/lib/w3m/:${PATH}"

# BPF (bcc) tools
# https://nanxiao.me/en/install-bcc-on-archlinux/
export MANPATH=/usr/share/bcc/man:$MANPATH
export PATH=/usr/share/bcc/tools:$PATH
export PATH=$PATH:/home/mccurdyc/.local/bin
