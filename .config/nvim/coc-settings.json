{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "refactor.openCommand": "sp",
  "diagnostic.displayByAle": true,
  "diagnostic.maxWindowHeight": 15,
  "suggest.maxPreviewWidth": 500,
  "codeLens.enable": true
}
