##@## ~/.config/zathura/zathurarc ##@##
## purpose; zathura configuration, and partially the girara framework.
## reminder; official documentation lacks almost any information about this;
## reminder; but this site is thorough; https://www.mankier.com/5/zathurarc

set guioptions "s"
set page-padding 3
set adjust-open "best-fit"
set font "'Office Code Pro Medium' 15"

set completion-bg "#e4e4e4"
set completion-fg "#74788b"
set completion-group-bg "#e4e4e4"
set completion-group-fg "#74788b"
set completion-highlight-bg "#e4e4e4"
set completion-highlight-fg "#5f005f"

set highlight-color "#5f005f"
set highlight-active-color "#5f005f"
set highlight-transparency 0.8

set inputbar-bg "#e4e4e4"
set inputbar-fg "#5f005f"

set notification-bg "#e4e4e4"
set notification-fg "#5f0000"
set notification-error-bg "#e4e4e4"
set notification-error-fg "#5f0000"
set notification-warning-bg "#e4e4e4"
set notification-warning-fg "#5f0000"

set recolor false
set recolor-darkcolor "#000000"
set recolor-lightcolor "#e4e4e4"
set recolor-keephue false
set recolor-reverse-video false
set default-fg "#000000"
set default-bg "#e4e4e4"
set render-loading false

set statusbar-bg "#e4e4e4"
set statusbar-fg "#000000"
set statusbar-home-tilde true
